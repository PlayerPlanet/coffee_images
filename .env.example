# Telegram API Credentials
# Get these from https://my.telegram.org/apps
api_id=YOUR_TELEGRAM_API_ID
api_hash=YOUR_TELEGRAM_API_HASH

# Bot Configuration
BOT_USERNAME=@StufeBot

# Polling interval in seconds (300 = 5 minutes, 600 = 10 minutes)
POLL_INTERVAL_SECONDS=300

# Response timeout in seconds
RESPONSE_TIMEOUT=30

# Polling hours (local time, 24-hour format)
# Only poll between these hours (default: 8 AM to 6 PM)
POLL_START_HOUR=8
POLL_END_HOUR=18